---
// src/pages/blog/index.astro — Blog index for programmatic SEO (newest first)
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Blog – Karnal Local Services"
  description="Karnal mein construction rates, calculator tips, false ceiling, solar, aur pest control. Pehle numbers dekho—phir jab ready ho tab call karo."
  canonical="/blog"
>
  <div class="mx-auto max-w-3xl px-4 py-10">
    <h1 class="mb-4 text-3xl font-bold text-stone-900">Blog</h1>
    <p class="mb-8 text-lg text-stone-600">
      Karnal mein construction rates, calculator tips, false ceiling, solar, aur pest control. Real numbers—koi jargon nahi.
    </p>
    <ul class="space-y-6">
      {posts.map((post) => (
        <li>
          <a
            href={`/blog/${post.id}`}
            class="block rounded-xl border border-stone-200 bg-white p-4 no-underline shadow-sm transition hover:border-emerald-300 hover:shadow"
          >
            <time class="text-sm text-stone-500" datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' })}
            </time>
            <h2 class="mt-1 font-semibold text-stone-900">{post.data.title}</h2>
            <p class="mt-1 text-sm text-stone-600">{post.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
    <p class="mt-8 text-sm text-stone-500">
      <a href="/" class="text-emerald-600 no-underline hover:underline">← Home pe wapas jao</a>
    </p>
  </div>
</BaseLayout>
